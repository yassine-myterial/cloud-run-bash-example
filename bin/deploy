#!/usr/bin/env bash
set -eEuo pipefail

gcloud builds submit \
  --project "${PROJECT_ID}" \
  --tag "gcr.eu/${PROJECT_ID}/scheduled-bash" \
  .

gcloud beta run deploy "scheduled-bash" \
  --image "gcr.io/${PROJECT_ID}/scheduled-bash" \
  --platform "managed" \
  --region "eu-west3" \
  --project "${PROJECT_ID}" \
  --concurrency 1 \
  --allow-unauthenticated
